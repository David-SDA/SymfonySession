{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
    <div class="page">
        <h1 class="titrePage">LISTE DES FORMATIONS</h1>
        <a href="{{ path('add_formation') }}">AJOUTER UNE FORMATION</a>
        {% if formations %}
            <table>
                <thead>
                    <tr>
                        <th>Formation</th>
                        <th>Sessions</th>
                        <th>Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for formation in formations %}
                        <tr>
                            <td><a href="{{ path('show_formation', { 'id' : formation.id }) }}">{{ formation }}</a></td>
                            <td>{{ formation.sessions | length }}</td>
                            {% if formation.sessions | length == 0 %}
                                <td><a href="{{ path('delete_formation', { 'id' : formation.id }) }}"><i class="fa-solid fa-trash"></i></a></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    </div>
{% endblock %}
