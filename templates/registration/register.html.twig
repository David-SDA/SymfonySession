{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="page">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        <h1>Bienvenue dans la gestion des sessions</h1>

        {{ form_start(registrationForm, { 'attr' : { 'class' : 'securite' } }) }}
            <h2>Création du compte</h2>
            <div class="ligneFormulaire">
                {{ form_label(registrationForm.nomComplet, 'Nom complet :') }}
                {{ form_widget(registrationForm.nomComplet) }}
            </div>
            <div class="ligneFormulaire">
                {{ form_label(registrationForm.email, 'Email :') }}
                {{ form_widget(registrationForm.email) }}
            </div>
            <div class="ligneFormulaire">
                {{ form_label(registrationForm.plainPassword.first, 'Mot de passe :') }}
                {{ form_widget(registrationForm.plainPassword.first) }}
            </div>
            <div class="ligneFormulaire">
                {{ form_label(registrationForm.plainPassword.second, 'Confirmation du mot de passe :') }}
                {{ form_widget(registrationForm.plainPassword.second) }}
            </div>
            <div class="accepterRegles">
                {{ form_widget(registrationForm.agreeTerms) }}
                {{ form_label(registrationForm.agreeTerms, 'Accepter les règles') }}
            </div>

            <button type="submit" class="boutonSubmit">S'INSCRIRE</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
