{% extends 'base.html.twig' %}

{% block title %}Détails d'une catégorie{% endblock %}

{% block body %}
    {% if categorie %}
        <h1>{{ categorie }} <a href="{{ path('edit_categorie', { 'id' : categorie.id }) }}"><i class="fa-solid fa-pen-to-square"></i></a></h1>
        <a href="{{ path('add_module') }}">AJOUTER UN MODULE</a>
        {% if categorie.modules %}
            
            <table>
                <thead>
                    <tr>
                        <td>Module</td>
                        <td>Sessions</td>
                        <td>Supprimer</td>
                    </tr>
                </thead>
                <tbody>
                    {% for module in categorie.modules %}
                        <tr>
                            <td><a href="{{ path('show_module', { 'id' : module.id }) }}">{{ module }}</a></td>
                            <td>{{ module.sessionModules | length }}</td>
                            {% if module.sessionModules | length == 0 %}
                                <td><a href="{{ path('delete_module', { 'id' : module.id }) }}"><i class="fa-solid fa-trash"></i></a></td>                            
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
    {% endif %}
{% endblock body %}